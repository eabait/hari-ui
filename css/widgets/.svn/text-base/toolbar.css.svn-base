
.toolbar {
  font-size: 0.75em;
  margin-bottom: 6px;
  width: 1230px;
}

.toolbar .toolbar-options-group,
.toolbar .toolbar-options {
  list-style-type: none;
}

.toolbar .toolbar-options-group {
  margin-left: 5px;
}

.toolbar .toolbar-options-group li,
.toolbar .toolbar-options li {
  display: inline-block;
}

.toolbar .toolbar-options {
  margin-right: 5px;
}

.toolbar .toolbar-options-group-li {
  border-right: 2px groove white;
}

.toolbar .toolbar-options-group-li:nth-child(3) {
  border-right: none;
}

.toolbar .toolbar-icon {
  display: inline-block;
  margin-right: 2px;
}

.toolbar .toolbar-option {
  padding: 6px 6px 6px 6px;
}

.toolbar .toolbar-option:hover {
  background-color: #deecf4;
  border: 1px solid #95bad4;
  padding: 3px 4px 2px 4px;
  margin: 0 1px 0 1px;
  -webkit-border-radius: 3px;
  -moz-border-radius: 3px;
  border-radius: 3px;
  cursor: pointer;
}

.toolbar .toolbar-option-name {
  position: relative;
  bottom: 3px;
}