.breadcrumb-container {
	font-family: Arial;
	font-size: 12px;
	color: #333333;
	width: 100%;
	min-width: 1280px;
	height:27px;
	border-bottom: 1px solid #aeaeae;
	margin-bottom: 5px;
	background: #E8E8E8;
}

.breadcrumb-wrapper {
	height: 100%;
	margin:0 auto;
}

.breadcrumb-home {
	position: relative;
	float: left;
	height: 100%;
	width: 68px;
	background: white;
	border-right: 1px solid #aeaeae;
	pointer-events: auto;
	cursor: pointer;
}

.center-icon{
	margin-left: 24px;
	margin-top: 6px
}

.breadcrumb-content {
	position: relative;
	float: left;
}

.breadcrumb {
	position: relative;
	list-style: none;
	overflow: hidden;
}

.breadcrumb li {
	float: left;
	}
	.breadcrumb li a {
		position: relative;
		display: block;
		float: left;
		color: #333333;
		text-decoration: none;
		padding: 6px 0 6px 40px;
		-webkit-box-sizing: border-box; /* Safari/Chrome, other WebKit */
  	-moz-box-sizing: border-box;    /* Firefox, other Gecko */
  	box-sizing: border-box;         /* Opera/IE 8+ */
	}
	.breadcrumb li a::after,
	.breadcrumb li a:after {
		content: " ";
		display: block;
		width: 0;
		height: 0;
		border-top: 50px solid transparent; /* Go big on the size, and let overflow hide */
		border-bottom: 50px solid transparent;
		border-left: 30px solid #E8E8E8;
		position: absolute;
		top: 50%;
		margin-top: -50px;
		left: 100%;
		z-index: 2;
	}
	.breadcrumb li a::before,
	.breadcrumb li a:before {
		content: " ";
		display: block;
		width: 0;
		height: 0;
		border-top: 50px solid transparent; /* Go big on the size, and let overflow hide */
		border-bottom: 50px solid transparent;
		border-left: 30px solid #8BCFFC;
		position: absolute;
		top: 50%;
		margin-top: -50px;
		margin-left: 1px;
		left: 100%;
		z-index: 1;
	}
.breadcrumb li:first-child a {
	padding-left: 10px;
	border-left: 2px solid #AAAAAA;
}
.breadcrumb li:last-child a {
	pointer-events: none;
	cursor: default;
}
.breadcrumb .breadcrumb-active {
	background: #DEECF4 !important;
	pointer-events: none;
	cursor: default;
	font-weight: bold;
}
.breadcrumb .breadcrumb-active::after,
.breadcrumb .breadcrumb-active:after {
	border-left-color: #DEECF4 !important;
}
.breadcrumb li a:hover {
	background: white;
}
.breadcrumb li a:hover::after,
.breadcrumb li a:hover:after {
	border-left-color: white !important;
}