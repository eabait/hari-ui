/**
 * CORE Widget style classes
 */

.ui-widget {
  font-family: Arial, Helvetica, sans-serif;
  background-color: white;
}

.ui-widget-border {
  border:solid 1px #aeaeae;
  -moz-border-radius: 7px;
  -webkit-border-radius: 7px;
  border-radius: 7px;
}

.ui-helper-border {
  -moz-border-radius: 5px;
  -webkit-border-radius: 5px;
  border-radius: 5px;
  border: 1px solid #EBE8E8;
}

.ui-helper-hidden {
  display : none;
}

.ui-helper-gradient {
  background: #e0e0e1; /* for non-css3 browsers */
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#fefefe', endColorstr='#e0e0e1'); /* for IE */
  background-image: linear-gradient(bottom, rgb(224,224,225) 22%, rgb(254,254,254) 75%);
  background-image: -o-linear-gradient(bottom, rgb(224,224,225) 22%, rgb(254,254,254) 75%);
  background-image: -moz-linear-gradient(bottom, rgb(224,224,225) 22%, rgb(254,254,254) 75%);
  background-image: -webkit-linear-gradient(bottom, rgb(224,224,225) 22%, rgb(254,254,254) 75%);
  background-image: -ms-linear-gradient(bottom, rgb(224,224,225) 22%, rgb(254,254,254) 75%);
  background-image: -webkit-gradient( linear, left bottom, left top, color-stop(0.22, rgb(224,224,225)), color-stop(0.75, rgb(254,254,254)));
}

.ui-helper-gradient-inverter {
  background: #e0e0e1; /* for non-css3 browsers */
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#e0e0e1', endColorstr='#fefefe'); /* for IE */
  background-image: linear-gradient(bottom, rgb(254,254,254) 22%, rgb(224,224,225) 75%);
  background-image: -o-linear-gradient(bottom, rgb(254,254,254) 22%, rgb(224,224,225) 75%);
  background-image: -moz-linear-gradient(bottom, rgb(254,254,254) 22%, rgb(224,224,225) 75%);
  background-image: -webkit-linear-gradient(bottom, rgb(254,254,254) 22%, rgb(224,224,225) 75%);
  background-image: -ms-linear-gradient(bottom, rgb(254,254,254) 22%, rgb(224,224,225) 75%);
  background-image: -webkit-gradient( linear, left bottom, left top, color-stop(0.22, rgb(254,254,254)), color-stop(0.75, rgb(224,224,225)));
}

/*
 * To see if it shuld be merged with .ui-helper-border
 */
.ui-help-tabs-border {
  -moz-border-radius: 8px;
  -webkit-border-radius: 8px;
  border-radius: 8px;
  border: 1px solid #bbbbbb;
}

.ui-helper-shadow {
    -moz-box-shadow: 1px 5px 10px #a3a1a3;
    -webkit-box-shadow: 1px 5px 10px #a3a1a3;
    box-shadow: 1px 5px 10px #a3a1a3;
}

.left {
  float: left;
}

.right {
  float: right;
}

/*Shadow Line Effect*/
.shadow-effect {
  position:relative;
}
.shadow-effect:before, .shadow-effect:after {
  content:"";
  position:absolute;
  z-index:-1;
  -webkit-box-shadow:0 0 20px rgba(0,0,0,1);
  -moz-box-shadow:0 0 20px rgba(0,0,0,1);
  box-shadow:0 0 20px rgba(0,0,0,1);
  top:50%;
  bottom:0;
  left:10px;
  right:10px;
  -moz-border-radius:100px / 20px;
  border-radius:100px / 20px;
}
.shadow-effect:after {
  right:auto;
  left:auto;
  -webkit-transform:skew(8deg) rotate(3deg);
     -moz-transform:skew(8deg) rotate(3deg);
      -ms-transform:skew(8deg) rotate(3deg);
       -o-transform:skew(8deg) rotate(3deg);
          transform:skew(8deg) rotate(3deg);
}

/*ToolBar Style*/
.toolbar-style {
  border-top: 1px solid white;
  border-bottom:  1px solid #9e9e9e;
  border-left: 1px solid #a6a6a6;
  border-right: 1px solid #a6a6a6;
  -webkit-border-radius: 10px;
  -moz-border-radius:    10px;
  border-radius:         10px;

  -webkit-box-shadow: 0 -1px 1px #aeaeae;
  -moz-box-shadow:    0 -1px 1px #aeaeae;
  box-shadow:         0 -1px 1px #aeaeae;
}

.toolbar-shadow-effect {
    position:relative;
}
.toolbar-shadow-effect:before, .toolbar-shadow-effect:after {
    content:"";
    position:absolute;
    z-index:-1;
    -webkit-box-shadow:0 0 20px rgba(0,0,0,1);
    -moz-box-shadow:0 0 20px rgba(0,0,0,1);
    box-shadow:0 0 20px rgba(0,0,0,1);
    top:30%;
    bottom:0;
    left:300px;
    right:300px;
    -moz-border-radius: 350px / 15px;
    border-radius: 350px / 15px;
}
.toolbar-shadow-effect:after {
    right:auto;
    left:auto;
    -webkit-transform:skew(8deg) rotate(3deg);
       -moz-transform:skew(8deg) rotate(3deg);
        -ms-transform:skew(8deg) rotate(3deg);
         -o-transform:skew(8deg) rotate(3deg);
            transform:skew(8deg) rotate(3deg);
}










