/**
 * Footer styles
 */

.footer-wrapper {
  position: relative;
  width: 1230px;
  height: 35px;
  margin: 0 auto;
  bottom: 0;
  font-size: 0.75em;
}

.footer-toolbox {
  display: inline-block;
  padding: 6px 0 10px 0;
  margin-left: 10px;
  cursor: pointer;
  width: 50%;
}

.footer-toolbox .footer-toolbox-span {
  display: inline-block;
  position: relative;
  top: 4px;
  font-weight: bold;
}

.footer-toolbox span {
  margin-right : 5px;
}

.footer-toolbox .footer-information-toolbox-icon {
  position: relative;
  top: 2px;
}

.footer-information {
  float: right;
  clear: both;
}
.footer-information ul li {
  display: inline-block;
  position: relative;
  padding-right: 10px;
  padding-left: 5px;
  padding-bottom: 10px;
  border-right: 2px groove white;
  cursor: pointer;
}
.footer-information ul li:first-child {
  border-left: 2px groove white;
  padding-left: 10px;
}
.footer-information ul li:last-child {
  border-right: none;
}
.footer-health-span {
  font-weight: bold;
  display: inline-block;
  position: relative;
}
.footer-information-icon {
  display: inline-block;
  top: 2px;
  position: relative;
  margin-top: 6px
}
.footer-information ul li:first-child ul li {
  display: inline-block;
  position: relative;
  padding: 0;
  border: none;
}
.footer-health-icons {
  display: inline-block;
  position: relative;
}
.footer-information-task-number,
.footer-information-number {
  font-weight: bold;
}
.footer-information-warnings {
  display: inline-block;
  position: relative;
}
.warnings-border {
  padding-left: 5px;
  border-left: 2px solid gray;
}
.footer-information-number,
.footer-information-task-number,
.footer-title-area {
  position: relative;
  top: -1px;
}