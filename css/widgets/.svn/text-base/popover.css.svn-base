.inner-menu {
	position: absolute;
	left: 255px;
	top: 50px;
	width: 100%;
	background-color: #f9fdff;
}

.inner-menu li:hover {
	font-weight: normal;
}

.inner-menu li span {
	font-size: 12px;
	font-weight: normal;
}

.popover-blue-shadow {
	-webkit-box-shadow: 0px 0px 15px rgba(51, 106, 137, 1);
	-moz-box-shadow:    0px 0px 15px rgba(51, 106, 137, 1);
	box-shadow:         0px 0px 15px rgba(51, 106, 137, 1);
}

.notifications-blue-button {
	display: block;
	background-color: #ADD0E4;
	color: white;
	border: none;
	padding: 2px 8px 3px 8px;
	font-size: 13px;
	cursor: pointer;
}
