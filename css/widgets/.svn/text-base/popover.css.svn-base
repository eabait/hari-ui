.popover {
	position: absolute;
	bottom: 50px;
	z-index: 1000;
	width: 255px;
	background-color: white;
	-webkit-border-radius: 5px;
	-moz-border-radius: 5px;
	border-radius: 5px;

}

.popover ul {
	list-style-type: none;
	border-bottom: 1px solid #C2C2C2;
}

.popover ul li {
	border-bottom: 1px solid #c2c2c2;
	padding: 15px 15px 10px 15px;
	cursor: pointer;
}

.popover ul li:hover {
	background-color: #f0faff;
}

.popover ul	li:first-child {
	-webkit-border-top-left-radius: 5px;
	-webkit-border-top-right-radius: 5px;
	-moz-border-radius-topleft: 5px;
	-moz-border-radius-topright: 5px;
	border-top-left-radius: 5px;
	border-top-right-radius: 5px;
}

.popover ul li:last-child a {
	position: relative;
	top: 3px;
	font-size: 12px;
	text-decoration: none;
}

.popover ul li div {
	display: inline-block;
}

.popover .message-with-button {
	display: inline-block;
	width: 64%
}

.popover .more-info-buttons {
	position: relative;
	bottom: 6px;
}

.popover-title {
	margin-bottom: 2px;
	font-size: 12px;
}

.popover-footer-title {
	font-size: 12px;
	font-weight: bold;
}

.popover .popover-menu-option :hover{
	font-weight: bold
}

.popover-footer-arow-position {
	position: relative;
	bottom: 18px;
	left: 5px;
}

.popover .notification-title {
	font-weight: bold;
}

.popover .menu-option-title {
	font-weight: normal;
}

.popover .notification-message {
	font-size: 11px;
	color: #848484;
}

.popover .notification-time {
	font-size: 11px;
}

.popover .popover-footer {
	background-color: #f8f8f8;

	padding-top: 7px;
	padding-bottom: 7px;
	border-bottom: none;

	border-bottom: 1px solid #d6d6d6;
	-webkit-border-bottom-right-radius: 5px;
	-webkit-border-bottom-left-radius: 5px;
	-moz-border-radius-bottomright: 5px;
	-moz-border-radius-bottomleft: 5px;
	border-bottom-right-radius: 5px;
	border-bottom-left-radius: 5px;
}

.popover .popover-footer:hover {
	background-color: #f8f8f8;
	cursor: normal;
}

.popover .popover-footer .popover-footer-icon{
	position: relative;
	bottom: 2px;
	margin-right: 5px;
}

.popover .popover-footer .triangle-down-shadow {
	border-color: rgba(51, 106, 137, 0.2) transparent transparent transparent;
	border-style: solid;
	border-width: 10px 20px 10px;
	height: 0;
	width: 0;
	position: absolute;
	bottom: -21px;
}

.popover .popover-footer .triangle-down-border {
	border-color: #C2C2C2 transparent transparent transparent;
  border-style: solid;
  border-width: 8px 14px 12px;
  height:0;
  width:0;
  position:absolute;
  bottom:-20px;
}

.popover .popover-footer .triangle-down {
  border-color: #F8F8F8 transparent transparent transparent;
  border-style: solid;
  border-width: 8px 14px 12px;
  height:0;
  width:0;
  position:absolute;
  bottom:-18px;

}


