.modal-open
.dropdown-menu {
  z-index: 2050;
}
.modal-open
.dropdown
.open {
  *z-index: 2050;
}
.modal-open
.popover {
  z-index: 2060;
}
.modal-open
.tooltip {
  z-index: 2070;
}
.modal-backdrop {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1040;
  background-color: #000000;
}
.modal-backdrop
.fade {
  opacity: 0;
}
.modal-backdrop,
.modal-backdrop.fade.in {
  opacity: 0.8;
  filter: alpha(opacity=80);
}
.modal {
  position: absolute;
  top: 50%;
  left: 50%;
  z-index: 1050;
  max-height: 420px;
  /*overflow: auto;*/
  width: 450px;
  margin: -250px 0 0 -280px;
  background-color: #ffffff;
  border: 1px solid #999;
  border: 1px solid rgba(0, 0, 0, 0.3);
  *border: 1px solid #999;
  /* IE6-7 */
  -webkit-border-radius: 6px;
  -moz-border-radius: 6px;
  border-radius: 6px;
  -webkit-box-shadow: 0 3px 7px rgba(0, 0, 0, 0.3);
  -moz-box-shadow: 0 3px 7px rgba(0, 0, 0, 0.3);
  box-shadow: 0 3px 7px rgba(0, 0, 0, 0.3);
  -webkit-background-clip: padding-box;
  -moz-background-clip: padding-box;
  background-clip: padding-box;
}
.modal
.fade {
  -webkit-transition: opacity .3s linear, top .3s ease-out;
  -moz-transition: opacity .3s linear, top .3s ease-out;
  -ms-transition: opacity .3s linear, top .3s ease-out;
  -o-transition: opacity .3s linear, top .3s ease-out;
  transition: opacity .3s linear, top .3s ease-out;
  top: -25%;
}
.modal
.fade
.in {
  top: 50%;
}
.fade {
  -webkit-transition: opacity 0.15s linear;
  -moz-transition: opacity 0.15s linear;
  -ms-transition: opacity 0.15s linear;
  -o-transition: opacity 0.15s linear;
  transition: opacity 0.15s linear;
  opacity: 0;
}
.fade
.in {
  opacity: 1;
}
/*
 * Modal Header
 */

.modal-header {
  width: 95%;
  margin: 10px auto 5px;
  border-bottom: 1px solid #D9D9D9;
}

.modal-header-title {
  margin-left: 0;
  display: inline-block;
  font-weight: bold;
}

.close {
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
  float: right;
  font-size: 20px;
  font-weight: bold;
  line-height: 18px;
  color: #000000;
  text-shadow: 0 1px 0 #ffffff;
  opacity: 0.2;
  border-left: 1px solid #D9D9D9;
  padding-left: 5px;
  padding-right: 2px;
  filter: alpha(opacity=20);
}
.close:hover {
  color: #000000;
  text-decoration: none;
  opacity: 0.4;
  filter: alpha(opacity=40);
  cursor: pointer;
}

/*
 * Modal Body
 */
.modal-body {
  padding: 15px;
  overflow: auto;
  max-height: 300px;
}
.modal-body
.modal-form {
  margin-bottom: 0;
}
.modal-body-input {
  margin: 0 auto;
  height: 25px;
  width: 99%;
  padding-left: 8px;
  -moz-box-shadow: 0 0 2px 2px #A1CBE2;
  -webkit-box-shadow: 0 0 2px 2px#A1CBE2;
  box-shadow: 0 0 2px 2px #A1CBE2;
  -webkit-appearance: none;
  -moz-appeearence: none;
  border: none;
  border-radius: 2px;
  -moz-box-sizing: border-box;
 -webkit-box-sizing: border-box;
  box-sizing: border-box;
}

/*
 * Modal Footer
 */
.modal-footer {
  padding: 5px 15px 15px;
  margin-bottom: 0;
  -webkit-border-radius: 0 0 6px 6px;
  -moz-border-radius: 0 0 6px 6px;
  border-radius: 0 0 6px 6px;
  -webkit-box-shadow: inset 0 1px 0 #ffffff;
  -moz-box-shadow: inset 0 1px 0 #ffffff;
  box-shadow: inset 0 1px 0 #ffffff;
  *zoom: 1;
}
.modal-footer:before,
.modal-footer:after {
  display: table;
  content: "";
}
.modal-footer:after {
  clear: both;
}
.modal-button {
  display: inline-block;
  min-width: 75px;
  text-decoration: none;
  color: black;
  font-size: 13px;
  text-align: center;
  padding: 1.5% 1.5%;
  border: 1px solid #D9D9D9;
  cursor: pointer;
  border-radius: 2px 2px 2px 2px;
  moz-box-shadow: 0 2px 0 rgba(50, 50, 50, 0.5);
  -webkit-box-shadow: 0 2px 0 rgba(50, 50, 50, 0.5);
  box-shadow: 0 2px 0 rgba(50, 50, 50, 0.2);
  margin-left: 5px;
}
.modal-cancel-btn {
  background-color: #F3F3F3;
}

.modal-footer .btn {
  float: right;
  margin-left: 5px;
  margin-bottom: 0;
}
