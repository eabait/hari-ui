/*
 * Widget Header with Actions tools
 */

.dirlldown-navigator-title {
  border-bottom:solid 1px #aeaeae;
  -moz-border-radius: 7px 7px 0 0;
  -webkit-border-radius: 7px 7px 0 0;
  border-radius: 7px 7px 0 0;
}

.drilldown-actions {
  position: relative;
  float: left;
  width: 100%;
  height: 46px;
  -webkit-box-sizing: border-box; /* Safari/Chrome, other WebKit */
  -moz-box-sizing: border-box;    /* Firefox, other Gecko */
  box-sizing: border-box;         /* Opera/IE 8+ */
}

.drilldown-actions
.drilldown-actions-back-wrapper
{
  display: inline-block;
  margin: 7px 0 7px 12px;
  }
  .drilldown-actions
  .drilldown-actions-back-wrapper
  img {
    float: left;
    cursor: pointer;
  }

.drilldown-actions-title-wrapper {
  display: inline-block;
  position: relative;
  bottom: 15px;
  margin-left: 10px;
  }
  .drilldown-actions-title-wrapper
  .drilldown-actions-title {
    font-size: 18px;
    font-weight: bold;
  }

.drilldown-actions-config-wrapper {
 display: inline-block;
 float: right;
  }
  .drilldown-actions-config-wrapper
  .drilldown-actions-config-btn
   {
    float: right;
    margin: 7px 10px 7px 0;
    cursor: pointer;
  }

/*
 * Filter Section
 */

.drilldown-filter {
  position: relative;
  float: left;
  top: 0;
  width: 100%;
  height: 38px;
  border-top: 2px solid #D9D9D9;
  border-bottom: 1px solid #EBE8E8;
  -webkit-box-sizing: border-box; /* Safari/Chrome, other WebKit */
  -moz-box-sizing: border-box;    /* Firefox, other Gecko */
  box-sizing: border-box;         /* Opera/IE 8+ */
}

.drilldown-filter img{
  position: relative;
  float: left;
  top: 0;
  cursor: pointer;
  }
  .drilldown-filter .drilldown-dropdown{
    height: 8px;
    width: 8px;
    margin: 15px 0 0 10px;
  }
  .drilldown-filter .drilldown-magnifier {
    margin: 12px 0 0 10px;
  }

.drilldown-filter input[type="search"]{
  position: relative;
  float: left;
  top: 0;
  width: 75%;
  margin: 10px 0 0 10px;
  -webkit-appearance: none;
  -moz-appeearence: none;
  border:none;
}

/*
 * Navigator Section
 */

.drilldown-window {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.drilldown-navigator {
  position:relative;
  float: left;
  width: 100%;
  overflow-y: auto;  /*TODO: check for crossbrowser issues here;*/
}

.drilldown-header-wrap {
  width: 100%;
}

.drilldown-root-icon {
  display: inline-block;
  margin: auto 5px auto 15px;
}

.drilldown-header {
  font-weight: bold;
  display: inline-block;
  margin: 10px 10px 5px 5px;
  text-align: left;
  font-size: 14px;
}

.drilldown-items, .drilldown-items ul {
  list-style-type : none;
  padding: 0;
  margin: 0;
}

.drilldown-items {
  position : relative;
  margin-left: 5px;
}

.drilldown-items ul {
  position : absolute;
  top : 0;
}

.drilldown-items ul ul {
  top : -1px;
}

.drilldown-items li {
  clear : both;
  float : left;
  width : 100%;
  margin : 0;
  padding : 0;
  border: 0;
}

.drilldown-items li li {
  font-size : 1em;
} /* inner li font size must be reset so that they don't blow up */

.item-nav {
  float: right;
  text-align: center;
}

.drilldown-items a:link,
.drilldown-items a:visited,
.drilldown-items a:active {
  color: black;
  float : left;
  width : 92%;
  padding : .3em 3%;
  text-decoration : none;
  outline: 0 !important;
}

.drilldown-items a:hover {
  background-color: #ebf5fa;
}

.drilldown-items a {
  color: black;
}

.drilldown-items .active a {
  font-weight: bold;
  background-color: #c7deeb;
}
